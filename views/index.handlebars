<div class="container">

    <h1>Eat the burger</h1> 

    <div>
        {{#each burgers}} 
            {{#unless this.devoured}} 
            <div>
            <p> {{this.id}}. {{this.burger_name}} </p>
            </div>
                <form action="/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name"devoured" values="true">
                    <div>
                        <button>Devour Burger</button>
                    </div>
                </form>    
            {{/unless}}
        {{/each}}
    </div>
    
    <div>
        {{#each burgers}}
            {{#if this.devoured}}
                <div>
                {{this.id}}. {{this.burger_name}}
                </div>
        
            {{/if}}
        {{/each}} 
    </div>
    
    <div>
        <form action="" method="POST" id="newburger"> 
            <textarea name="" id="newburger" cols="50" rows="8"></textarea>
            <div>
                <button type="submit">Add a burger</button>
            </div>
        </form>
    </div>

</div>