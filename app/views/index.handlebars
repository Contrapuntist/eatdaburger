<h1>Eat the burger</h1> 


    {{#each burger}}
        {{#if this.devoured}}
            <div>
                {{this.burger}}
            </div>
            <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name"devoured" values="true">
                <div>
                    <button>Devour Burger</button>
                </div>
            </form>        
        {{/if}}
    {{/each}} 

    <form action="" method="POST" id="newburger"> 
        <textarea name="" id="newburger" cols="50" rows="8"></textarea>
        <div>
            <button type="submit">Add a burger</button>
        </div>
    </form>


<ul>
  {{#each cats}}
    {{#if this.sleepy}}
      <li>
        {{this.name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="sleepy" value="false">
          <button type="submit">WAKE UP!</button>
        </form>

        {{> cats/delete-cat}}
      </li>
    {{/if}}
  {{/each}}
</ul>